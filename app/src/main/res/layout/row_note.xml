<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_margin="5dp"
                                       app:cardElevation="5dp"
                                       app:cardCornerRadius="5dp"
                                       android:layout_height="wrap_content">
        <RelativeLayout
                android:id="@+id/lyBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivThumbnail"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                android:layout_margin="3dp"
                    android:background="@drawable/ic_book_black_24dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ivThumbnail"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tvBookName"
                        style="@style/textStyle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text=""
                        tools:text="알짜만 골라 배우는 안드로이드 프로그래밍"/>

                <TextView
                        android:layout_marginTop="8dp"
                        android:id="@+id/tvNoteTitle"
                        style="@style/textStyle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text=""
                        tools:text="알짜만 골라 배우는 안드로이드 프로그래밍을 일고..."/>

                <TextView
                        android:layout_marginTop="8dp"
                        android:id="@+id/tvRegDate"
                        style="@style/textStyle1"
                        android:layout_width="wrap_content"
                        android:text=""
                        tools:text="등록일 : 2019.10.22"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>
