<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.midasgo.bookdoc">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".MyApp"
            android:allowBackup="true"
            android:icon="@mipmap/app_icon"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/app_icon"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <meta-data android:name="com.kakao.sdk.AppKey" android:value="@string/kakao_app_key"/>

        <activity android:name=".ui.act.ActIntro"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>

            </intent-filter>
            <intent-filter>
                <data android:scheme="@string/kakao_scheme" android:host="@string/kakaolink_host" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.act.ActLogin"
                  android:theme="@style/AppTheme"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ui.act.ActMain"
                  android:theme="@style/AppTheme"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ui.act.ActAddBook"
                  android:theme="@style/AppTheme"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ui.act.ActBookDetail"
                  android:theme="@style/AppTheme"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ui.act.ActModifyBook"
                  android:theme="@style/AppTheme"
                  android:screenOrientation="portrait">
        </activity>
    </application>
</manifest>